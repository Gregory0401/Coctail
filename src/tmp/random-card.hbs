      {{#each this}}
      <li class="cocktails__item card-set-item">
        <img
          src="{{strDrinkThumb}}"
          alt="{{strDrink}}"
          width="280px"
          height="395px"
          loading='lazy'
        />
        <div class="cocktails__box">
          <h2 class="cocktails__second-title">{{strDrink}}</h2>
          <button type="button" class="cocktails__btn">Learn more</button>
          <button type="button" class="cocktails__btn transparent">
            Add to
            <svg class="cocktails__btn-icon" width="18px" height="18px">
              <use href="./images/icon.svg#icon-redlike"></use>
            </svg>
          </button>
        </div>
      </li>
      {{/each}}